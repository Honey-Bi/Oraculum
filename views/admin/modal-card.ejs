<div class="modal fade text-dark text-left" id="cardModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Card</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="cardForm" method="post" action="/admin/actionCard">
                <input type="hidden" name="id" id='card_id' value="asd">
                <input type="hidden" name="actionType" id="cardActionType">
                <div class="modal-body">
                    <div class="form-group">
                        <div class="input-group">
                            <input class="upload-name form-control" value="첨부파일" placeholder="첨부파일" readonly>
                            <div class="input-group-append">
                                <label for="file" class="btn btn-outline-secondary" >첨부파일</label>
                            </div>
                        </div>
                        <input type="file" id="file" name="image" class="upload-img" accept=".png">
                    </div>

                    <div class="form-group">
                        <img id="cardImage" src="" alt="">
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <select name="type" id="cardType" class="form-control">
                                    <option value="npc">npc</option>
                                    <option value="scene">scene</option>
                                </select>
                            </div>
                            <input type="text" id="cardName" name="name" placeholder="이름" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveBtn">Add Card</button>
                    <button type="button" class="btn btn-warning" id="editBtn">Edit Event</button>
                </div>
            </form>
        </div>
    </div>
</div>