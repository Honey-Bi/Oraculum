<!DOCTYPE html>
<html lang="ko">
<head>
    <%- include('./adminHead'); %>   
</head>
<body>
    <%
    var keys = [], count = 0;
    for (fieldName in event[0]._doc) {
        if(!['_id', 'contents'].includes(fieldName)) {
            keys[count++] = fieldName;
        }
    } 
    %>
    <main>
        <%- include('./sidebar') %>
        <div class="container">
            <div class="table-title">
                <span>Event Data</span>
                <button class="btn btn-primary add-new" data-toggle="modal" data-target="#eventModal">
                    <i class="fa-solid fa-plus"></i>
                </button>
            </div>
            <div class="d-flex overflow-auto">
                <table class="table table-striped table-dark mt-5">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <% for (key of keys) { %>
                                <th scope="col"><%= key %></th>
                            <% } %>
                            <th scope="col">actions</th>   
                        </tr>
                    </thead>
                    <tbody>
                        <% for (i in event) { %>
                        <tr>
                            <th scope="row"><%= i %></th>  
                            <% for (key of keys) { %>
                            <td nowrap>
                                <%= event[i][key] %>
                            </td>
                            <% } %>
                            <td>
                                <button type="button" class="editEvent btn btn-warning" data-toggle="modal" data-target="#eventModal" value="<%= event[i]._id %>">
                                    <i class="fa-sharp fa-solid fa-pen-to-square"></i>
                                </button>
                                <button type="button" class="delete btn btn-danger" value="<%= event[i]._id %>">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <div class="modal fade text-dark text-left" id="eventModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Event</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="eventForm" onsubmit="return false;">
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="col-form-label">event_code</label>
                            <input type="number" class="form-control" id="addEventCode" min="0" required>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">title</label>
                            <input type="text" class="form-control" id="addTitle" required>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">contents</label>
                            <textarea class="form-control" id="addContents" required></textarea>
                        </div>
                        <div class="form-gorup">
                            <label class="col-form-label">left & right text</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="add_l_text" placeholder="l_text" required>
                                <input type="text" class="form-control" id="add_r_text" placeholder="r_text" required>
                            </div>
                        </div>
                        <div class="form-gorup">
                            <label class="col-form-label">left & right result</label>
                            <div class="input-group">
                                <div class="btn-group btn-group-toggle resultBtnGroup" data-toggle="buttons">
                                    <label class="btn btn-outline-primary active">
                                        <input type="radio" name="results" id="left_result" value="left" checked> left
                                    </label>
                                    <label class="btn btn-outline-primary">
                                        <input type="radio" name="results" id="right_result" value="right"> right
                                    </label>
                                </div>
                                <input type="number" class="form-control" min="-100" max="100" name="add_result" placeholder="연료" required>
                                <input type="number" class="form-control" min="-100" max="100" name="add_result" placeholder="자원" required>
                                <input type="number" class="form-control" min="-100" max="100" name="add_result" placeholder="기술" required>
                                <input type="number" class="form-control" min="-100" max="100" name="add_result" placeholder="위험" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">next_event</label>
                            <select class="form-control" id="add_next_event" required>
                                <option value="default">defulat</option>
                                <% for (i of event) { %>
                                    <option value="<%= i._id %>"><%= i.event_code %> <%= i.title %></option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-warning" id="editBtn">Edit Event</button>
                        <button type="submit" class="btn btn-primary" id="saveBtn">Add Event</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('../script'); %>
    <script>$('.nav-item:nth-child(3) > .nav-link').addClass('active');</script>
    <script src="/js/admin.js"></script>
</body>
</html>